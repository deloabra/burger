<main>
    <section class="title">
        <h1>Burgers</h1>


        <form class="create-form">
            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="ba" name="name">
                <button type="submit">Submit</button>
            </div>
        </form>

    </section>
    <div class="burger-list">

        <h2>Uneaten Burgers</h2>
        <ul>
            {{#each burger}}
            {{#unless devoured}}
            <li>
            <p class="burger-list-element">{{id}}. {{burger_name}} <button class="devour-button" data-id={{id}}>Devour</button></p>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="burger-list">

        <h2>Eaten Burgers</h2>
        <ul>
            {{#each burger}}
            {{#if devoured}}
            <li>
                <p class="burger-list-element">{{id}}. {{burger_name}} <button class="delete-button" data-id={{id}}>Delete</button></p>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</main>
